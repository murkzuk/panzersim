class CC5M2BaseUnitGroup extends CBaseUnitGroup
{
  void Init()
  {
    CBaseUnitGroup::Init();
    ActivateFire(false);
    ActivateRadar(false);
    ActivateMovement(false);
    //SetEnemyReactionType(ERT_FRIGID);
  }

  event void SetActive()
  {
//    if(GetMission().isDebug)
//        logWarning("CC5M2BaseUnitGroup  call SetActive for Group with ID=" + getIdentificator(user));
    ActivateFire(true);
    ActivateRadar(true);
    ActivateMovement(true);
    SetEnemyReactionType(ERT_AGGRESSIVE);
  }
}
