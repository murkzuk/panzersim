class CC5M2RusTankTask1 extends CBaseAITankTask
{
     boolean isActive;
     boolean First;

  void Init()
  {
    CBaseAITankTask::Init();
    ActivateFire(false);
    ActivateRadar(false);
    ActivateMovement(false);
    isActive = false;
    First = false;
    sendEvent(5.0, getIdentificator(user), "SetActiveGroup", []);
    sendEvent(120.0, getIdentificator(user), "Grp1RadarON", []);
  }
  event void SetActiveGroup()
  {
    if (!isActive)
    isActive = true;
    ActivateMovement(true);
    sendEvent(0.0, getIdentificator(user), "PointVecB", []);
  }
  event void Grp1RadarON()
  {
   SetEnemyReactionType(ERT_AGGRESSIVE); //
    ActivateFire(true);
    ActivateRadar(true);
  }

  event void PointVecB()
  {
    if (!First )
    {
    Vector  DestinationVec =  GetNavPointBehPos("C5M2_AttackNavPoint_1");
    SetOrder_MoveTo_Direct((DestinationVec), 6.5f );
    sendEvent(40.0, getIdentificator(user), "PointVecB", []);
    }
    return;
   }
}
