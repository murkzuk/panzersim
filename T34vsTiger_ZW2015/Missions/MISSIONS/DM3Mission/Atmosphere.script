class CDM3Atmosphere extends CCommonAtmosphere
{
  boolean IsLightEnabled   = true;
  boolean IsAntiSunEnabled = true;

  Vector  SunDirection   = new Vector(-0.105195, -0.105554, -0.355535);
  Color   AmbientLight   = new Color(0.152941, 0.152941, 0.180392, 1.000000);
  Color   SunColor       = new Color(0.682353, 0.682353, 0.682353, 1.000000);
  Color   AntiSunColor   = new Color(0.576471, 0.592157, 0.666667, 1.000000);
  float   DistanceToSun  = 2000.0;

  Array   HorizontPos    = [100.0f, 1000.0f];

  String  DefaultFogMode = "Exp";

  float   FogDensity     = 0.001000;
  float   FogNear        = 10.0;
  float   FogFar         = 500.0;
  float   FogFarMax      = 4000.0;

  Color   FogColorXPos   = new Color( 0.627451, 0.627451, 0.627451, 1.000000); // S
  Color   FogColorXNeg   = new Color( 0.627451, 0.627451, 0.627451, 1.000000); // N
