  static int   MaxPlayers           = 10;
  static int   FragLimit            = 10;

  String  m_UTCTime           = "19:10:00";
  String  m_LocalTime         = "19:10:00";

  String  m_LocalTime       = "19:20:00";
  String m_TerrainMapTextureName = "Textures/DM4_Map.tex";

  static String m_MissionBriefingPicMaterial = "DM4BriefingPic";

  Array  m_MissionObjectives = [
          ];

