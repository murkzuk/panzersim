class CBaseModel
{
  final static int     DefaultInstancesQty          = 2;
  
  final static int     DefaultShadowCheckMode       = SVCM_LightRange; // SVCM_BoxDown;   

  final static boolean DefaultPlanarShadow          = false; //   emulation of shadows (projection of mesh on the plane
  
  final static float   DefaultPlanarShadowLodShift  = 0.0f;
  
  final static boolean DefaultFakeShadow            = false;

  final static float   DefaultFakeShadowScale       = 1.0f;
  
  final static float   DefaultLodForShadowChange    = 999.9f;

  final static boolean DefaultUseBoxForIsection     = false;

  final static boolean DefaultUseShapesAsWalkedMesh = false;

  final static float   DefaultLodForShadowHide      = 999.9f;

  // default model settings
  String MeshFile         = "";
  String SkinClass        = "";
  String RouterMapFile    = "";
  Array  Animation        = [];
  Map    ConfigSets       = new Map([]);  
  Map    MaterialsNameId  = new Map([]);

  // common functions
  static void PreloadResources()
  {
    Component Model = createScriptClass(classname);
    Model.PreloadModelResources();
  }      

  void PreloadModelResources()
  {
    Component SkinManager = new #SkinManager();
    SkinManager.PreloadSkin(SkinClass);
    
    Component ResourceManager = new #ResourceManager();
    ResourceManager.PreloadResource(MeshFile);
  }      
}
