class CSettingsMenu
  extends CBaseMenu, CSettingsControls
{
  static String m_MenuClassName = "CSettingsMenu";

  void OnInitMenu()
  {
    m_MenuController.SetDefaultCommands("", "BackButton");
  }

  void OnControlActivated(
      String _ID
    )
  {
    if ("BackButton" == _ID)
      GoBack();
    if ("VideoSettingsButton" == _ID)
      Invoke("VideoSettingsMenu");
    if ("AudioSettingsButton" == _ID)
      Invoke("AudioSettingsMenu");
    if ("GameSettingsButton" == _ID)
      Invoke("GameSettingsMenu");
    if ("ControlsSettingsButton" == _ID)
      Invoke("ControlsSettingsMenu");
  }
}
