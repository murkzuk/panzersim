    Cu_veh_M3A1HalfTrackModel::FakeShadowScale                = 0.9;

    // APC Hanomag mod.C
    Cu_veh_Hanomag_251CModel::FakeShadow                      = true;
    Cu_veh_Hanomag_251CModel::FakeShadowScale                 = 0.9;

    // Truck Opel Blitz
