    // T34-85 mod.44
    Cu_veh_t34_85_44Model::FakeShadow                         = true;
    Cu_veh_t34_85_44Model::FakeShadowScale                    = 0.9;

    // T34-76 mod.42
    Cu_veh_t34_76_42Model::FakeShadow                         = true;
    Cu_veh_t34_76_42Model::FakeShadowScale                    = 0.9;

    // SAU StuG-40 mod.G
    Cu_veh_SAU_Stug40Model::FakeShadow                        = true;
