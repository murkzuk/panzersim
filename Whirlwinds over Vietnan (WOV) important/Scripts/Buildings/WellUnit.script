// Unit Explosion
class CWellExplosion
  extends CBuildingExplosion

{
  float  Damage   = 10.0;
  float  Radius   = 5.0;
  String    SoundId  = "WellExplosionSound";
}

class CWellUnit
  extends CGroundBuilding
{

  final static float DefaultHitPoints = CHitPoints::WellUnitHitPoints;

  static String PrevExplosionID = "WellExplosion";

  // Automatic classificators of this object
  final static Array AutomaticClassificators  = ["STRUCTURE"];

  // =======================================
  // Contruction and initialization
  // =======================================

  void CWellUnit()
  {
    SetupMesh(new #AnimatedObject<Cbld_WellModel>(), [250, 100, 5]);
  }

  void Construct(
      Component _Mission,
      Component _PropMap
    )
  {
    CGroundBuilding::Construct(_Mission, _PropMap);

    GetObject("StateControl").SetDamageTypeModifier(CBaseExplosion::CLASSIFICATOR_DAMAGE_BULLET, 0.00f);
  }
}
