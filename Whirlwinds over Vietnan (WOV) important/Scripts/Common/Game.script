  {
    UnloadMission();
    DeleteMenuController();
    StartMission(m_StartMission);
    m_EscapeMenuLoaded = false;
  }

  void SetupPlayer()
  {
    Component Mission = GetLoadedMission();
    if (null != Mission)
    {
