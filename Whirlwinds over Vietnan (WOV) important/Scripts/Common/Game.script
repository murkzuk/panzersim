    // Unload current level
    UnloadMission();

    // Reset menus
    DeleteMenuController();
    
    // Show main menu
    CreateMainMenu();

    ActivateCamera(SOID_MainCamera, true);
  }

  event void QuitMission()
  {
    UnloadMission();

    // Reset menus
    DeleteMenuController();
    
    // Show main menu
    CreateMainMenu();

    ActivateCamera(SOID_MainCamera, true);
  }

